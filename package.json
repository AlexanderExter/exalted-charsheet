{
  "name": "exalted-charsheet",
  "version": "0.1.0-alpha",
  "private": true,
  "description": "A comprehensive digital character sheet manager for the Exalted: Essence tabletop RPG system",
  "homepage": "https://github.com/AlexanderExter/exalted-charsheet",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexanderExter/exalted-charsheet.git"
  },
  "bugs": {
    "url": "https://github.com/AlexanderExter/exalted-charsheet/issues"
  },
  "keywords": [
    "exalted",
    "character-sheet",
    "tabletop-rpg",
    "nextjs",
    "react"
  ],
  "author": "Exalted Community",
  "license": "MIT",
  "scripts": {
    "// Development": "Scripts for local development",
    "dev": "next dev --turbopack",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev --turbopack",
    
    "// Building": "Scripts for building the application",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "export": "next build && next export",
    
    "// Production": "Scripts for running in production",
    "start": "next start",
    "preview": "npm run build && npm run start",
    
    "// Code Quality": "Scripts for maintaining code quality",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    
    "// Maintenance": "Scripts for project maintenance",
    "clean": "rimraf .next out node_modules/.cache",
    "deps:update": "npm update && npm audit",
    "deps:check": "npm outdated"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next": "15.4.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5"
  }
}
